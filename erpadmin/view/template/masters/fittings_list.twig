<form id="form-fittings" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="#fittings">
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <td class="text-center" style="width: 1px;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));" class="form-check-input"/></td>
          <td class="text-center">Image</td>
          <td class="text-center">Name</td>
          <td class="text-center">Weight</td>
          <td class="text-center">Qty</td>
          <td class="text-center">Price</td>
          <td class="text-center">Status</td>
          <td class="text-end">Action</td>
        </tr>
      </thead>
      <tbody>
        {% if fittings %}
          {% for fitting in fittings %}
            <tr {% if fitting.qty <= 10000 %} style="background-color:#ed4343e8;" {% endif %}>
              <td class="text-center"><input type="checkbox" name="selected[]" value="{{ fitting.fittings_id }}" class="form-check-input"/></td>
              <td class="text-center"><img src="{{fitting.image}}"/></td>
              <td class="text-center">{{ fitting.name }}</td>
              <td class="text-center">{{ fitting.weight }}</td>
              <td class="text-center">{{ fitting.qty }}</td>
              <td class="text-center">{{ fitting.price }}</td>
              <td class="text-center">{% if fitting.status %}Enabled{% else %}Disabled{% endif %}</td>
              <td class="text-end">
                <a href="{{ fitting.edit }}" data-bs-toggle="tooltip" title="Edit" class="btn btn-warning"><i class="fa-solid fa-pencil"></i></a>
              </td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td class="text-center" colspan="7">{{ text_no_results }}</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-sm-6 text-start">{{ pagination }}</div>
    <div class="col-sm-6 text-end">{{ results }}</div>
  </div>
</form>
