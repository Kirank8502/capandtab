{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
      <div class="float-end">
        <a href="{{ add }}" data-bs-toggle="tooltip" title="Add" class="btn btn-primary"><i class="fa-solid fa-plus"></i></a>
        <button type="submit" form="form-die" formaction="{{ delete }}" data-bs-toggle="tooltip" title="Delete" onclick="return confirm('{{ text_confirm }}');" class="btn btn-danger"><i class="fa-regular fa-trash-can"></i></button>
      </div>
      <h1>Die</h1>
      <ol class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
          <li class="breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ol>
    </div>
  </div>
  <div class="container-fluid">
    <div class="row">
      <div class="col col-md-12">
        <div class="card">
          <div class="card-header"><i class="fa-solid fa-list"></i>Die List</div>
          <div id="die" class="card-body">{{ list }}</div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript"><!--

$('#button-filter').on('click', function () {
    var url = '';

    var filter_name = $('#input-name').val();

    if (filter_name) {
        url += '&filter_name=' + encodeURIComponent(filter_name);
    }

    var filter_status = $('#input-status').val();

    if (filter_status !== '') {
        url += '&filter_status=' + filter_status;
    }

    window.history.pushState({}, null, 'index.php?route=masters/die&user_token={{ user_token }}' + url);

    $('#die').load('index.php?route=masters/die|list&user_token={{ user_token }}' + url);
});

$('#input-name').autocomplete({
    'source': function (request, response) {
        $.ajax({
            url: 'index.php?route=masters/die|autocomplete&user_token={{ user_token }}&filter_name=' + encodeURIComponent(request),
            dataType: 'json',
            success: function (json) {
                response($.map(json, function (item) {
                    return {
                        label: item['name'],
                        value: item['die_id']
                    }
                }));
            }
        });
    },
    'select': function (item) {
        $('#input-name').val(item['label']);
    }
});

$('#input-model').autocomplete({
    'source': function (request, response) {
        $.ajax({
            url: 'index.php?route=masters/pigment|autocomplete&user_token={{ user_token }}&filter_model=' + encodeURIComponent(request),
            dataType: 'json',
            success: function (json) {
                response($.map(json, function (item) {
                    return {
                        label: item['model'],
                        value: item['pigment_id']
                    }
                }));
            }
        });
    },
    'select': function (item) {
        $('#input-model').val(item['label']);
    }
});
//--></script>
