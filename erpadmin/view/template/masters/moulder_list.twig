<form id="form-moulder" method="post" data-oc-toggle="ajax" data-oc-load="{{ action }}" data-oc-target="#moulder">
  <div class="table-responsive">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <td class="text-center" style="width: 1px;"><input type="checkbox" onclick="$('input[name*=\'selected\']').prop('checked', $(this).prop('checked'));" class="form-check-input"/></td>
          <td class="text-center">Name</td>
          <td class="text-center">Email</td>
          <td class="text-center">Address</td>
          <td class="text-center">Number</td>
          <td class="text-center">Bank Name</td>
          <td class="text-center">Account No.</td>
          <td class="text-center">IFSC Code</td>
          <td class="text-center">Status</td>
          <td class="text-end">Action</td>
        </tr>
      </thead>
      <tbody>
        {% if moulders %}
          {% for moulder in moulders %}
            <tr>
              <td class="text-center"><input type="checkbox" name="selected[]" value="{{ moulder.moulder_id }}" class="form-check-input"/></td>
              <td class="text-center">{{ moulder.name }}</td>
              <td class="text-center">{{ moulder.email }}</td>
              <td class="text-center">{{ moulder.address }}</td>
              <td class="text-center">{{ moulder.number }}</td>
              <td class="text-center">{{ moulder.bank_name }}</td>
              <td class="text-center">{{ moulder.account_no }}</td>
              <td class="text-center">{{ moulder.ifsc_code }}</td>
              <td class="text-center">{% if moulder.status %}Enabled{% else %}Disabled{% endif %}</td>
              <td class="text-end">
                <a href="{{ moulder.edit }}" data-bs-toggle="tooltip" title="Edit" class="btn btn-warning"><i class="fa-solid fa-pencil"></i></a>
              </td>
            </tr>
          {% endfor %}
        {% else %}
          <tr>
            <td class="text-center" colspan="7">{{ text_no_results }}</td>
          </tr>
        {% endif %}
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-sm-6 text-start">{{ pagination }}</div>
    <div class="col-sm-6 text-end">{{ results }}</div>
  </div>
</form>
